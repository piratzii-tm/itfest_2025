import { FontAwesomeIcon } from "@fortawesome/react-native-fontawesome";
import { faBell, faHouse, faPlus } from "@fortawesome/free-solid-svg-icons";

export const KTabBarIcon = ({ label, isFocused }: { label: string, isFocused:boolean }) =>
  label === "HomeScreen" ? (
    <FontAwesomeIcon icon={faHouse} size={32} color={isFocused ? "white": "blue"} />
  ) : label === "ScanScreen" ? (
    <FontAwesomeIcon icon={faPlus} size={32} color={isFocused ? "white": "blue"}  />
  ) : (
    <FontAwesomeIcon icon={faBell} size={32} color={isFocused ? "white": "blue"} />
  );
